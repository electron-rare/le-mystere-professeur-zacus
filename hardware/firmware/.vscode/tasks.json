{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Zacus: RC Live",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", "set -euo pipefail; ./tools/dev/cockpit.sh rc"],
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "panel": "dedicated", "reveal": "always" },
      "problemMatcher": []
    },
    {
      "label": "Zacus: Flash + RC Live",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "set -euo pipefail; ./tools/dev/cockpit.sh flash && ./tools/dev/cockpit.sh rc"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "panel": "dedicated", "reveal": "always" },
      "problemMatcher": []
    },
    {
      "label": "Zacus: RC Live + AutoFix",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", "set -euo pipefail; ./tools/dev/cockpit.sh rc-autofix"],
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "panel": "dedicated", "reveal": "always" },
      "problemMatcher": []
    },
    {
      "label": "Zacus: Ports watch (15s)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "set -euo pipefail; while true; do ./tools/dev/cockpit.sh ports; sleep 15; done"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": {
        "panel": "dedicated",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": []
    }
  ]
}
