#!/usr/bin/env bash
set -euo pipefail
ROOT="$(cd "$(dirname "$0")/../.." && pwd)"
PYTHON_BIN="python3"
if [[ -x "$ROOT/.venv/bin/python3" ]]; then
  PYTHON_BIN="$ROOT/.venv/bin/python3"
fi
export PYTHONPATH="$ROOT/lib/zacus_story_gen_ai/src${PYTHONPATH:+:$PYTHONPATH}"
exec "$PYTHON_BIN" -m zacus_story_gen_ai.cli "$@"
